<div class="columns is-mobile is-centered is-multiline">
  <% @flash_cards.each do |card| %>
    <div class="column is-one-quarter-tablet is-four-fifths-mobile">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= card.category %></p>
        </header>
        <div class="card-content">
          <div class="content">
            <%= card.question %>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to "Show", user_flash_card_path(current_user, card), class: "card-footer-item" %>
          <%= link_to "Edit", destroy_user_session_path, class: "card-footer-item" %>
          <%= link_to "Delete", user_flash_card_path(current_user, card), class: "card-footer-item", method: :delete,
            data: {
              confirm: 'Are you sure?'
            }
          %>
        </footer>
      </div>
    </div>
  <% end %>
</div>
